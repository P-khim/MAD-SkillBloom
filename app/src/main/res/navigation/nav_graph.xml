<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.skillbloomapp.ui.element.fragment.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.skillbloomapp.ui.element.fragment.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/saveFragment"
        android:name="com.example.skillbloomapp.ui.element.fragment.SaveFragment"
        android:label="SaveFragment"
        tools:layout="@layout/fragment_save">
        <action
            android:id="@+id/action_saveFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.example.skillbloomapp.ui.element.fragment.CommunityFragment"
        android:label="Community"
        tools:layout="@layout/fragment_community"/>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.skillbloomapp.ui.element.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>
</navigation>
